{%if authors is empty%}
<h1>table is empty</h1>
{%endif%}
{%if authors is null%}
<h1>table is null</h1>
{%endif%}
<table border=1>
<tr>
<th>id</th>
<th>username</th>
<th>email</th>
<th>delete</th>
<th>update</th>
</tr>

{%for author in authors%}
<tr>
   <td>{{author.id}}</td> 
   <td>{{author.username}}</td> 
   <td>{{author.email}}</td> 
   <td> <a href="{{ path('author_delete', {'id': author.id}) }}" onclick="return confirm('Are you sure you want to delete this author?');" class="btn btn-danger">Delete</a> </td></tr>
  <td> <a href="{{ path('author_update', {'id': author.id}) }}">update</a></td> 
  {% endfor %}
